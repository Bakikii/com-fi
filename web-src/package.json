{
    "name": "@void-tech/comfy-ts",
    "version": "0.0.4",
    "main": "./dist/app.js",
    "type": "module",
    "scripts": {
        "vite:dev": "vite",
        "vite:build": "tsc && vite build",
        "vite:preview": "vite preview",
        "dependency-test": "madge --circular ./src/scripts/app.ts",
        "build": "yarn clean && tsc && yarn copy-js && yarn copy-public",
        "copy-js": "cpx \"web-src/src/**/*.{js,example,css}\" web/ --preserve",
        "copy-public": "cpx \"web-src/public/**/*.*\" web/",
        "clean": "rimraf ./web/",
        "dev": "http-server ./web-src -c-1 -o",
        "start": "http-server ./web -c-1 -o"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "cpx": "^1.5.0",
        "madge": "^6.1.0",
        "prettier": "^3.2.1",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    },
    "dependencies": {
        "litegraph.js": "github:void-tech-art/litegraph.js#master"
    }
}
